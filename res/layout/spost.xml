<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="top">
    <LinearLayout android:layout_height="fill_parent" android:layout_width="fill_parent" android:id="@+id/postMsg" android:layout_above="@+id/postBtn">
        <EditText android:layout_width="wrap_content" android:layout_weight="1" android:imeOptions="flagNoExtractUi" android:id="@+id/postTweetMsg" android:gravity="top" android:layout_height="wrap_content" android:layout_gravity="bottom"></EditText>
        <TextView android:id="@+id/postTweetCnt" android:layout_marginLeft="3dp" android:text="140" android:layout_width="wrap_content" android:minWidth="28dp" android:layout_height="wrap_content" android:layout_marginRight="3dp" android:textSize="@dimen/defaultFontSizeMiddle" android:textColor="?android:textColorPrimary" android:gravity="right" android:layout_gravity="bottom"></TextView>
	</LinearLayout>
	<LinearLayout android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:scrollbars="vertical" android:layout_width="fill_parent" android:id="@+id/postBtn">
	    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/postShortenBtn" android:text="@string/shortenText"></Button>
	    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/postTweetBtn" android:text="@string/tweetText"></Button>
	</LinearLayout>
</RelativeLayout>
