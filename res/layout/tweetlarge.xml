<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_margin="1dp" android:layout_width="fill_parent" android:layout_height="wrap_content">
    <TextView android:id="@+id/bar" android:layout_width="wrap_content" android:layout_height="fill_parent" android:padding="4dp" android:background="#2a2a2a"></TextView>
    <ImageView android:id="@+id/profile_image" android:layout_margin="4dp" android:scaleType="centerCrop" android:layout_height="75dp" android:layout_width="75dp"></ImageView>
    <LinearLayout android:id="@+id/inner_box" android:orientation="vertical" android:layout_height="wrap_content" android:padding="4dp" android:layout_marginBottom="2dp" android:layout_width="fill_parent">
        <LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/user_info">
            <TextView android:textStyle="bold" android:layout_height="wrap_content" android:id="@+id/screen_name" android:layout_width="wrap_content" android:layout_weight="1" android:textColor="?android:textColorPrimary"></TextView>
            <ImageView android:src="@drawable/key" android:id="@+id/key" android:layout_height="@dimen/defaultFontSizeMiddle" android:layout_width="@dimen/defaultFontSizeMiddle" android:layout_gravity="center"></ImageView>
            <ImageView android:src="@drawable/fav" android:id="@+id/fav" android:layout_height="@dimen/defaultFontSizeMiddle" android:layout_width="@dimen/defaultFontSizeMiddle" android:layout_gravity="center"></ImageView>
        </LinearLayout>
        <TextView android:id="@+id/name" android:layout_height="wrap_content" android:layout_width="fill_parent" android:textColor="?android:textColorSecondary" android:textSize="@dimen/defaultFontSizeSmall"></TextView>
        <TextView android:id="@+id/text" android:layout_height="wrap_content" android:layout_width="fill_parent" android:textColor="?android:textColorPrimary"></TextView>
        <TextView android:id="@+id/others" android:layout_height="wrap_content" android:layout_width="fill_parent" android:textSize="@dimen/defaultFontSizeSmall" android:textColor="?android:textColorSecondary"></TextView>
        <LinearLayout android:layout_height="wrap_content" android:id="@+id/retweet_box" android:gravity="right|center" android:layout_width="fill_parent">
            <ImageView android:layout_marginRight="3dp" android:id="@+id/retweet_profile_image" android:layout_height="37.5dp" android:layout_width="37.5dp"></ImageView>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/retweet_text" android:text="@string/retweetPlus" android:textSize="@dimen/defaultFontSizeSmall"></TextView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
